<div>
    <a asp-action="Edit" asp-route-id="@Model.CarID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="row mt-5 r1 wow bounceInUp">
    @foreach (var image in Model.Images)
    {
        <div class="col-md-4">

            <div class="card">
                <div class="dropdown show float-lg-right mt-1">
                    <a class="btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        
                    </a>

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" asp-action="DeleteImage" asp-route-imageID="@image.ImageID">Delete Image</a>
                        <a class="dropdown-item" asp-action="SetDisplayImage" asp-route-imageID="@image.ImageID">Set as Display Picture</a>
                    </div>
                </div>
                @if(Model.DisplayImage == image.ImageLocation)
                {
                    <p>DP</p>
                }
                <div class="card-body">
                    <div class="poverlay">
                        <img src="~/images/@image.ImageLocation" class="" style="width:100%;" alt="No Image" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

