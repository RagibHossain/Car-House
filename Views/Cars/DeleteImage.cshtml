@model Car_House.Models.ViewModels.ImageViewModel

@{
    ViewData["Title"] = "DeleteImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>DeleteImage</h1>

<h3>Are you sure you want to delete this Image ?</h3>
<div>
    <h4>Image</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarBrand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarBrand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarModel)
        </dd>
    </dl>


    <div class="card m-auto">
        <div class="card-body">
            <div class="poverlay">
                <img src="~/images/@Model.Image.ImageLocation" class="" style="width:100%;" alt="No Image" />
            </div>
        </div>
    </div>


    <form asp-action="DeleteImage">

        <input type="hidden" asp-for="ImageID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-route-id="Image.CarID">Back to Details</a>

    </form>
</div>
