@model Car_House.Models.ViewModels.ImageViewModel

@{
    ViewData["Title"] = "Delete Image";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Image</h1>

<h3 class="text-white">Are you sure you want to delete this Image ?</h3>
<div class="mb-5">
    <hr />
    <dl class="row text-white">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarBrand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarBrand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarModel)
        </dd>
    </dl>


    <div class="card m-auto">
        <div class="card-body">
            <div class="poverlay">
                <img src="~/images/@Model.Image.ImageLocation" class="" style="width:100%;" alt="No Image" />
            </div>
        </div>
    </div>

    <br />

    <form class="carcss" asp-action="DeleteImage">

        <input type="hidden" asp-for="ImageID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="float-right" asp-action="Details" asp-route-id="@Model.CarID">Back to Details</a>

    </form>
</div>
