@model Car_House.Models.ViewModels.ImageViewModel
@{
    ViewData["Title"] = "SetDisplayImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>SetDisplayPicture</h1>


<h3>Are you sure you want to set this Image as Display Picture ?</h3>

<div>
    <h4>Image</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarBrand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarBrand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarModel)
        </dd>
    </dl>


    <div class="card m-auto">
        <div class="card-body">
            <div class="poverlay">
                <img src="~/images/@Model.Image.ImageLocation" class="" style="width:100%;" alt="No Image" />
            </div>
        </div>
    </div>


    <form asp-action="SetDisplayImage">

        <input type="hidden" asp-for="ImageID" />
        <input type="hidden" asp-for="CarID" />
        <input  type="submit" value="Confirm" class="btn btn-outline-info mt-1" /> 
        <a class="float-right" asp-action="Details" asp-route-id="CarID">Back to Details</a>

    </form>
</div>