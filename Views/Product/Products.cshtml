<body>
    <section class="minivan">
        <div class="type-minivan">
            <div class="row">
                <div class="col-md-12">
                    <div class="details pdetails">
                        <h2>OUR MINIVANS</h2>
                        <p>
                            Have you really seen this sleek minivan?
                            Check out our not so mini minivans available just one click away!
                        </p>
                        <button class="btnproduct pbutton"><a style="color: black" asp-controller="Home" asp-action="suv">SEE MORE</a></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="objects container">
            <div class="row prd">
                @foreach (var item in Model.Cars)
                {
                    if (item.Category == Category.Minivan)
                    {
                        <div class="col-md-3">
                            <div class="product">
                                <div class="poverlay">
                                    <img src="~/images/@item.DisplayImage" class="image-responsive">
                                    <a asp-controller="Product" asp-action="Product" asp-route-CarID="@item.CarID" class="btn btn-custom btn-project">VIEW MORE</a>
                                </div>
                                <ul>
                                    <li class="left">MINIVAN</li>
                                    <li class="right">$$$$$</li>
                                </ul>
                            </div>
                        </div>

