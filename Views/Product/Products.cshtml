
@{
    ViewData["Title"] = "products";
    Layout = "~/Views/Shared/_CarHouseLayout.cshtml";
}

@{
    ViewData["Title"] = "All Products";
}
@model Car_House.Models.ViewModels.CarHouseViewModel

